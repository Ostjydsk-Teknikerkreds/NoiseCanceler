                "clear": true // <-- this line
            },
            "command": "./software/scripts/clang_format_src.sh software/src",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
