            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Build debug"
            ]
        },
        {
            "label": "Run CPP check",
            "type": "shell",
            "presentation": {
