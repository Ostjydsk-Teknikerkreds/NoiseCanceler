    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simulation",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/software/.cmake_build_debug/test/simulations/simulation", //path to your programs exe and exe name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/software/src/application",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },]
}